{
  "name": "gql-pg",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docker-build": "docker build --tag gql-bp .",
    "docker-run": "docker run -p 4000:8080 -d gql-bp",
    "docker": "npm run docker-build && npm run docker-run",
    "build": "npm run compile-typescript && npm run generate-schema && npm run copy-schema",
    "compile-typescript": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run lint && npm run generate-types && ENV=dev nodemon --config nodemon.json src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.unit.config.ts",
    "test:integration": "npm run build && jest --config=jest.integration.config.ts",
    "logs:pp": "tail -f logs/server.log | pino-pretty",
    "generate-types": "npm run generate-schema && graphql-codegen --config codegen.yml",
    "generate-schema": "ts-node src/schema/scripts/generateSchemaFile.ts",
    "copy-schema": "ts-node src/schema/scripts/copySchema.ts",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@graphql-codegen/cli": "1.20.0",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "1.20.0",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/pino": "^6.3.5",
    "@types/ramda": "^0.27.35",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "axios": "^0.21.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.0.5",
    "sqlite3": "^5.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "jsonwebtoken": "^8.5.1",
    "pino": "^6.11.0",
    "pino-pretty": "^4.3.0",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "save-dev": "0.0.1-security",
    "typeorm": "^0.2.30",
    "uuid": "^8.3.2"
  }
}
